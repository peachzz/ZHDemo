<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <bitmap android:gravity="center" android:src="@drawable/menu_follow_highlight" android:tileMode="disabled"></bitmap>
    </item>

    <item android:state_selected="true">
        <bitmap android:gravity="center" android:src="@drawable/menu_arrow" android:tileMode="disabled"></bitmap>
    </item>

    <item>
        <bitmap android:gravity="center" android:src="@drawable/menu_follow" android:tileMode="disabled"></bitmap>
    </item>
</selector>